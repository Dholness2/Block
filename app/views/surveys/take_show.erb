<div class='row'>
 <div class="col-md-4  col-md-offset-3">
 <h1><%= survey.name%></h1>
   <form class='answers' action='/surveys/submit' method='post'>
     <% survey.questions.each do |question| %>
       <%= erb :'/questions/take_show', locals: {question: question} %>
    <%end%>
    <div class='row'>
      <div class = "col-md-2 col-md-offset-5">
        <input  class="btn btn-default submit_button" type='submit' value='Submit'/>
      </div>
    </div>
  </form>
 </div>
</div>
