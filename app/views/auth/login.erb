<body id ="background" >

 <div class = "row title"  >
   <div class = "col-md-4 col-md-offset-3" >
    <h1 class ="text-center title"  id = "caption"> Survey Express </h1>
    <h3 Class ="text-center" id = "caption"> For The Answers You Need Now</h3>
  </div>
</div>
<div class = "row">
  <div class ="col-md-11  col-md-offset-3" >
      <form action='/login' method="post"  >
        <input id= "userinput"type="string"  name="username" placeholder="username"/>
        <input id= "userinput" type="password" name="password" placeholder="password" />
        <input id= "userinput" type="submit" value="Log In"/>
      </form>
  </div>
</div>
  <div class = "row">
    <div class ="col-md-11 col-md-offset-3" id= "signup" >
      <form action='/create/profile' method='post'>
        <input id= "userinput" type='string' name='user[name]' placeholder="username"/>
        <input id= "userinput" type="password" name="user[password]" placeholder="password" />
        <input id= "userinput" type="password" name="user[password]" placeholder="confirm password" />
        <input id= "userinput" type="email" name="user[email]" placeholder="email" />
        <input id= "userinput"  type="submit" value="Sign Up"/>
      </form>
    </div>
  </div>
 </div>



<% if params[:error] == 'ua' %>
  <p>Sorry There was a problem logging you in.</p>
<% end %>

<% if params[:error] == 'internalerror' %>
  <p>There was a problem saving your profile, try again.</p>
<% end %>
</body>

